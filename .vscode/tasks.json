{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Use Makefile Debug",
            "command": "make",
            "args": [
                "-j",
                "debug",
            ],
            "options": {
                "cwd": "${workspaceFolder}/philo"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task Gen. by Debugger."
        },
        {
            "type": "shell",
            "label": "Use Makefile Leaks",
            "command": "make",
            "args": [
                "-j",
                "-B",
                "leaks",
            ],
            "options": {
                "cwd": "${workspaceFolder}/philo"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "presentation": {
        "panel" : "new"
    }
}